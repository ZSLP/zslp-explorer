<div class="transaction_box" id="address_page_header">
  <div>
    <div>
      <div class="address-qr-code left" id="qrcode-address-<%= address %>"></div>
    </div>
    <h6><%= address %></h6>
    <a target="_blank" href="https://explorer.zcl.zeltrez.io/address/<%= address %>">
      <button type="button" class="button right">View on Zclassic Explorer</button>
    </a>
  </div>
</div>

<div class="rounded_row">
  <div class="rounded box-shadow table-container">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th><h3>Details</h3></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th role="col">ZSLP Address</th>
            <td><%= slpjs.Utils.toSlpAddress(address) %></td>
          </tr>
          <tr>
            <th role="col">Zclassic Address</th>
            <td><%= slpjs.Utils.toLegacyAddress(address) %></td>
          </tr>
          <tr>
            <th role="col">Sent ZSLP Transactions</th>
            <td><%= total_sent_transactions %></td>
          </tr>
          <tr>
            <th role="col">Received ZSLP Transactions</th>
            <td><%= total_recv_transactions %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
  
<div class="rounded_row">
  <div id="address-tokens-table-container" class="rounded box-shadow table-container">
    <h3>Token Balances (<%= Number(total_tokens).toLocaleString() %>)</h3>
    <div class="table-responsive">
      <table class="table" id="address-tokens-table">
        <thead>
          <tr>
            <th data-tippy-content="The Token Id is the transaction id of the genesis transaction of the token.">Token Id</th>
            <th>Name</th>
            <th>Symbol</th>
            <th class="amount">Balance</th>
          </tr>
        </thead>
        <tbody>
          <tr><td>loading...</td><tr>
        </tbody>
      </table>
    </div>
    <ul class="pagination">
    </ul>
  </div>
</div>

<div class="rounded_row">
  <div id="address-transactions-table-container" class="rounded box-shadow table-container">
    <h3>Transactions (<%= Number(total_transactions).toLocaleString() %>)</h3>
    <div class="table-responsive">
      <table class="table" id="address-transactions-table">
        <thead>
          <tr>
            <th>Txid</th>
            <th>Type</th>
            <th class="amount">Amount</th>
            <th>Token</th>
            <th>Block</th>
            <th>Block Time</th>
          </tr>
        </thead>
        <tbody>
          <tr><td>loading...</td></tr>
        </tbody>
      </table>
      <ul class="pagination">
      </ul>
    </div>
  </div>
</div>

<div class="rounded_row">
  <h3>Transactions Chart (<span id="address-usage-count">...</span>)</h3>
  <div class="plot-time-selector">
      <span id="plot-address-usage-year">year</span>
      <span id="plot-address-usage-month">month</span>
      <span id="plot-address-usage-week">week</span>
      <span id="plot-address-usage-day">day</span>
  </div>
  <div id="plot-address-usage" style="width:100%"></div>
</div>

<div class="rounded_row">
  <div id="address-burn-history-table-container" class="rounded box-shadow table-container">
    <h3>Burn History (<%= Number(total_address_burn_transactions).toLocaleString() %>)</h3>
    <div class="table-responsive">
      <table class="table" id="address-burn-history-table">
        <thead>
          <tr>
            <th>Txid</th>
            <th class="amount">Amount Burnt</th>
            <th>Token</th>
            <th>Block Height</th>
            <th>Block Time</th>
          </tr>
        </thead>
        <tbody>
          <tr><td>Loading...</td></tr>
        </tbody>
      </table>
      <ul class="pagination">
      </ul>
    </div>
  </div>
</div>

